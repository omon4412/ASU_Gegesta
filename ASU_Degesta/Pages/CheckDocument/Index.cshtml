@page
@model ASU_Degesta.Pages.CheckDocument.Index
@{
    ViewData["Title"] = "Поиск документа по серийному номеру";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 xmlns="http://www.w3.org/1999/html">@ViewData["Title"]</h1>

<hr/>
<div class="row">
    <div class="col-md-7">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input id="search" asp-for="data" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
@if (Model.link != "!" && Model.link != "")
{
    <div>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ret.doc_id)
            </dt>
            <dd class="col-sm-10">
                @Model.ret.doc_id
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ret.doc_name)
            </dt>
            <dd class="col-sm-10">
                @Model.ret.doc_name
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ret.creator)
            </dt>
            <dd class="col-sm-10">
                @Model.ret.creator
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ret.creation_date)
            </dt>
            <dd class="col-sm-10">
                @Model.ret.creation_date
            </dd>
            <dt class="col-sm-2">
                Ссылка
            </dt>
            <dd class="col-sm-10">
                <a target="_blank" href="@Model.link">Документ</a>
            </dd>
        </dl>
    </div>
}
else if(@Model.link == "!")
{
    <br/>
    <a style="color: red">Документ не найден</a>
}

<div>
    <a href="./">Вернуться к списку</a>
</div>

@section Scripts{

}