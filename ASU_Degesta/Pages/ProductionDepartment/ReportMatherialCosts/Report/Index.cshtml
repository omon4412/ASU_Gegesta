@page
@model ASU_Degesta.Pages.ProductionDepartment.ReportMatherialCosts.Report.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReportMatherialCosts[0].types_of_products_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportMatherialCosts[0].direct_costs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportMatherialCosts[0].overhead_production_costs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportMatherialCosts[0].general_business_invoices)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportMatherialCosts[0].units_id)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ReportMatherialCosts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.TypesOfProductsList.Where(x => x.TypesOfProductsId == item.types_of_products_id).FirstOrDefault().Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direct_costs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.overhead_production_costs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.general_business_invoices)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.UnitsList.Where(x => x.Units_ID == item.units_id).FirstOrDefault().Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>