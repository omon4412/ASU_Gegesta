@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReportCostsProductionCapacity[0].EquipmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportCostsProductionCapacity[0].types_of_products_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportCostsProductionCapacity[0].costs)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ReportCostsProductionCapacity)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.EquipmentsList.Where(x => x.EquipmentId == item.EquipmentId).FirstOrDefault().EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.TypesOfProductsList.Where(x => x.TypesOfProductsId == item.types_of_products_id).FirstOrDefault().Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costs)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>