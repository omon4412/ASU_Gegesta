@page
@using ASU_Degesta.Models.SalesDepartment
@using ASU_Degesta.Models.ProductionDepartment
@using ASU_Degesta.Models.Accounting
@using ASU_Degesta.Models.PED
@model ASU_Degesta.Pages.PED.ReportProfitabilityMonth.CreateModel

@{
    ViewData["Title"] = "Создать новый отчёт о рентабельности за месяц";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ReportProfitabilityMonth_id.doc_id" class="form-control d-none" value="mg"/>
            </div>
            <div class="form-group">
                <label asp-for="ReportProfitabilityMonth_id.doc_name" class="control-label"></label>
                
                <div class="input-group mb-3">
                    <input id="paste" asp-for="ReportProfitabilityMonth_id.doc_name" class="form-control"/>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" onclick="pasteName('Отчёт о рентабельности за месяц')">Вставить</button>
                    </div>
                </div>
                <span asp-validation-for="ReportProfitabilityMonth_id.doc_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.rep_cost_id" class="control-label"></label>
                <select class="form-select" asp-for="@Model.rep_cost_id" asp-items="@(new SelectList(Model.rep_cost, nameof(ReportProductCost_id.doc_id), nameof(ReportProductCost_id.doc_name)))"></select>
                <span asp-validation-for="@Model.rep_cost_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.rep_plan_id" class="control-label"></label>
                <select class="form-select" asp-for="@Model.rep_plan_id" asp-items="@(new SelectList(Model.rep_plan, nameof(ReportProductPlan_id.doc_id), nameof(ReportProductPlan_id.doc_name)))"></select>
                <span asp-validation-for="@Model.rep_plan_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.price_list_id" class="control-label"></label>
                <select class="form-select" asp-for="@Model.price_list_id" asp-items="@(new SelectList(Model.price_list, nameof(PriceList_id.doc_id), nameof(PriceList_id.doc_name)))"></select>
                <span asp-validation-for="@Model.price_list_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ReportProfitabilityMonth_id.creation_date" class="form-control d-none" value="mg"/>
            </div>
            <div class="form-group">
                <input asp-for="ReportProfitabilityMonth_id.creator" class="form-control d-none" value="mg"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>