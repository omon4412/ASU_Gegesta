@model ASU_Degesta.Pages.Classifier.EditModel

@{
    ViewData["Title"] = "Редактировать классификатор";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Редактировать классификатор</h1>

@* <h4>types_of_products</h4> *@
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="types_of_products.types_of_products_id"/>
            <div class="form-group">
                <label asp-for="types_of_products.code" class="control-label"></label>
                <input asp-for="types_of_products.code" class="form-control"/>
                <span asp-validation-for="types_of_products.code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="types_of_products.Name" class="control-label"></label>
                <input asp-for="types_of_products.Name" class="form-control"/>
                <span asp-validation-for="types_of_products.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад в список</a>
</div>