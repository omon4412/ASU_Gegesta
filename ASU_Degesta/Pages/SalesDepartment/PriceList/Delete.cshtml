@page
@model DeleteModel

@{
    ViewData["Title"] = "Удалить запись " + Model.PriceList_id.doc_name;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <h4>PriceList_id</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceList_id.doc_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceList_id.doc_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceList_id.creation_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceList_id.creation_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceList_id.creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceList_id.creator)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PriceList_id.doc_id"/>
        <input type="submit" value="Удалить" class="btn btn-danger"/> |
        <a asp-page="./Index" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
            </svg>
            Вернуться к списку
        </a>
    </form>
</div>