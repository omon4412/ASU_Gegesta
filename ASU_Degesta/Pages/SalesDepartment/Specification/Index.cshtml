@page
@model IndexModel

@{
    ViewData["Title"] = "Спецификации к договору на поставку материалов";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"></path>
        </svg>
        Создать новую спецификацию
    </a>
</p>
<a href="./" class="btn btn-primary">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
    </svg>
    Вернуться к списку
</a>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SpecificationContractMaterials_id[0].doc_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecificationContractMaterials_id[0].doc_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecificationContractMaterials_id[0].creation_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecificationContractMaterials_id[0].creator)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.SpecificationContractMaterials_id)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.doc_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doc_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creation_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.creator)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.doc_id">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.doc_id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>